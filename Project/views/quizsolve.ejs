                $("#totalQues").val(quizArray.TotalQuestions);
                $("#CorrectQues").val(quizArray.TotalCorrectAnswers);
                //$("#headingData").html("Test Is Completed</br></br>Total Question = "+quizArray.TotalQuestions+"</br></br>Correct Answers = "+quizArray.TotalCorrectAnswers);

            }

