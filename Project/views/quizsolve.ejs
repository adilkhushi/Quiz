        }

var quesi = 0;
        function NxtQuestion(){
            var answer_selected_by_user;
            var radios = document.getElementById('quizType').elements['Answer_Selected'];
            for (var i=0, len=radios.length; i<len; i++) {
                if ( radios[i].checked ) {
                    answer_selected_by_user = radios[i].value;
                    break;
                }
            }

            if(answer_selected_by_user == "" || answer_selected_by_user==undefined)
            {
                alert("Please Enter Answer");
                return false;
            }
            var correctAnswer = $("#correctAnswer").val();

            //alert(quizArray.Questions[1].Question)

            //window.quizArray.TotalCorrectAnswers = window.quizArray.TotalCorrectAnswers+2;
            //alert(quizArray.TotalCorrectAnswers);
            if(answer_selected_by_user==quizArray.Questions[quesi].correctAnswer)
            window.quizArray.TotalCorrectAnswers = window.quizArray.TotalCorrectAnswers+1;


            quesi++;
            if(quizArray.TotalQuestions==quesi)//end of questions
            {
                $("#allFormData").html("");
                $("#headingData").html("Test Is Completed</br></br>Total Question = "+quizArray.TotalQuestions+"</br></br>Correct Answers = "+quizArray.TotalCorrectAnswers+"<br\><br\> <a href='#' onclick=sendres() style='color:blue'>Send Result To Friend</a>");
