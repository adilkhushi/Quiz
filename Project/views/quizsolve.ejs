            //quizArray.Questions[1].Question
            quesnumber = j;
            quesnumbertoshow = j+1;
           // alert(quizArray.Questions[1].Question)

            $("#formData").html("<div id='questionText'>Question"+quesnumbertoshow+": "+quizArray.Questions[j].Question);
            $("#formData").append('</div><br/><br/>');
            $("#formData").append('<input type="radio" name="Answer_Selected" id="Answer_Selected1" value="Answer1"/>'+quizArray.Questions[j].Answer1);
