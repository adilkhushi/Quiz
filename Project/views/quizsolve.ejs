        var quizArray=null;
        $(function() {
            $('.kwicks').kwicks({
                maxSize : 250,
                spacing : 5,
                behavior: 'menu'
            });
            var quizArrayJSON=$("#obj").val();
            quizArray=JSON.parse(quizArrayJSON);
            window.quizArray.TotalCorrectAnswers = 0;
            window.quizArray.TotalQuestions = quizArray.Questions.length;
