    <script LANGUAGE=JavaScript>
        function checkform()
        {
            if(document.quiz.question.value == "")
            {
                alert("Please Fill Empty Fields");
                document.quiz.question.focus();
                return false;
            }
            else if(i==1)
            {
                alert("Please add atleast 2 Answers");
                return false;
            }
            else if(i==2)
            {
                alert("Please add atleast 2 Answers");
                return false;
            }
            else
            {
                document.quiz.action='quiz/add';
                document.quiz.submit();
            }

        }
    </script>

    <script language="javascript">


        function AddAnswer()
        {

            if(i<5)
            {

                if (i==1)
                {
                    my_div.innerHTML = my_div.innerHTML +"<br><input placeholder='Add Answer' type='text' required='' name='Answer1'><br>"
                    div_radio.innerHTML = div_radio.innerHTML +"<input type='radio' name='A' checked='checked' value='A' >A"
                }
                else if (i==2)
                {
                    my_div.innerHTML = my_div.innerHTML +"<br><input placeholder='Add Answer' type='text' required='' name='Answer2'><br>"
                    div_radio.innerHTML = div_radio.innerHTML +"<input type='radio' name='A'  value='B' >B"
                }
                else if (i==3)
                {
                    my_div.innerHTML = my_div.innerHTML +"<br><input placeholder='Add Answer' type='text' required='' name='Answer3'><br>"
                    div_radio.innerHTML = div_radio.innerHTML +"<input type='radio' name='A'  value='C' >C"
                }
                else if (i==4)
                {
                    my_div.innerHTML = my_div.innerHTML +"<br><input placeholder='Add Answer' type='text' required='' name='Answer4'><br>"
                    div_radio.innerHTML = div_radio.innerHTML +"<input type='radio' name='A'  value='D' >D"
                }

                i=i+1;

            }
            else
            {
                alert('Maximum 4 Answers can be added ! ');
            }

        }

        function RemoveAnswer()
        {

            if (i==2)
            {
                my_div.innerHTML = ""
                div_radio.innerHTML = ""
                i=1;
            }
            if (i==3)
            {
                my_div.innerHTML = "<br><input placeholder='Add Answer' type='text' required='' name='Answer1'><br>"
                div_radio.innerHTML = "<input type='radio' name='A' checked='checked' value='A' >A"
                i=2;
            }
            else if (i==4)
            {
                my_div.innerHTML = "<br><input placeholder='Add Answer' type='text' required='' name='Answer1'><br>"+"<br><input placeholder='Add Answer' required='' type='text' name='Answer2'><br>"
                div_radio.innerHTML = "<input type='radio' name='A' checked='checked' value='A' >A"+ "<input type='radio' name='A' checked='checked' value='B' >B"
                //div_radio.innerHTML = div_radio.innerHTML +"<input type='radio' name='A'  value='Answer'+i >B"
                i=3;
            }
            else if (i==5)
            {
                my_div.innerHTML = "<br><input placeholder='Add Answer' type='text' required='' name='Answer1'><br>"+"<br><input placeholder='Add Answer' required='' type='text' name='Answer2'><br>"+"<br><input placeholder='Add Answer' required='' type='text' name='Answer3'><br>"
                div_radio.innerHTML = "<input type='radio' name='A' checked='checked' value='A' >A"+ "<input type='radio' name='A' checked='checked' value='B' >B"+"<input type='radio' name='A'  value='C' >C"
                i=4;
            }
            else
            {
                alert('Kindly add the Answer !');
            }


        }

    </script>


